% \section{Preparación de estados no estacionarios}
\section{Preparation of non-stationary states}
% ------

\begin{frame}{Preparación de estados no estacionarios}
    \textbf{Estado no estacionario} en \emph{movimiento}
    \begin{itemize}[label=\textbullet]
        \item \emph{Superposición} de estados estacionarios
        \begin{equation}
            \Ket{\Psi} = \sum_{n} a_n \Ket{\psi_n}
        \end{equation}
        con energía
        \begin{equation}
            \Braket{ E } = \sum_{n} \left| a_n \right|^2 E_n
        \end{equation}
        en nuestro caso
        \begin{equation}
            \Ket{\Psi} = \frac{1}{\sqrt{2} } \left\{  \cos \alpha \left( \Ket{\psi_0} + \Ket{\psi_1} \right)+ \sin \alpha \left( \Ket{\psi_2} + \Ket{\psi_3} \right) \right\}
        \end{equation}
    \end{itemize}
\end{frame}

\begin{frame}{Preparación de estados no estacionarios}
    Estados no estacionarios límite (\textcolor{graforange}{$\boldsymbol{\alpha = 0}$ } y \textcolor{grafblue}{$\boldsymbol{\alpha = 90^{\circ}}$})
    \begin{figure}[tb]
        \centering
        \includegraphics[width=1.0\textwidth]{ENE_limite}
        % \caption{}
        \label{fig:ENE_limite}
    \end{figure}
\end{frame}

