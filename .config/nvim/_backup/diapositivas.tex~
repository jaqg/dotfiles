% \section{Determinación de estados estacionarios}
\section{Determination of stationary states}
% ------

\begin{frame}{Determinación de estados estacionarios}
    Determinación de niveles de energía y funciones propias (estados estacionarios)
    \begin{itemize}[label=\textbullet]
        \item Ecuación de Schrödinger
        \begin{equation}
            \hat{H} \psi_i = E_i \psi_i
        \end{equation}
        \item Hamiltoniano del sistema
        \begin{equation}
            \hat{H} = - \frac{ \hbar^2 }{2 \mu} \frac{ \dd^2 }{ \dd{x^2} } + \frac{V_b}{x_e^4} x^4 - \frac{2V_b}{x_e^2} x^2 + V_b
        \end{equation}
    \end{itemize}
\end{frame}

\begin{frame}{Determinación de estados estacionarios}
    Conjunto de funciones base $\left\{ \Ket{\varphi_v} \right\}_N$ $\implies$ oscilador armónico unidimensional
