% \section{Dinámica de estados no estacionarios}
\section{Time dynamics of non-stationary states}
% ------

\begin{frame}{Dinámica de estados no estacionarios}
    Evolución temporal de los estados no estacionarios localizados en el pozo de la izquierda
    \begin{itemize}[label=\textbullet]
        \item \emph{Ecuación de Schrödinger dependiente del tiempo}
        \begin{equation}
                i \hbar \frac{\partial \Psi(x,t)}{\partial t} = \hat{H} \Psi(x,t)
        \end{equation}
        \item \emph{Superposición} de estados estacionarios $\Ket{\psi_i(t)}$
        \begin{equation}
            \Ket{\Psi(t)} = \sum_{i} \Ket{\psi_i(t)} a_i = \sum_{i}  a_i \Ket{\varphi_i} e^{-i E_i t /\hbar }
        \end{equation}
    \end{itemize}
\end{frame}

\begin{frame}{Preparación de estados no estacionarios}
    \begin{itemize}[label=\textbullet]
        \item Valor esperado de la posición $\hat{x}=x$
        \begin{equation}
            \Braket{ x }_t = \sum_{i} \left| a_i \right|^2 \Braket{\varphi_i | x | \varphi_i} + 2 \sum_{i}\sum_{j>i} a_i a_j \Braket{\varphi_i | x | \varphi_j} \cos \frac{ \left( E_j - E_i \right) t}{\hbar }
        \end{equation}
        \item Probabilidad de supervivencia
        \begin{equation}
                P_s(t) = \left| \Braket{\Psi(x,0) | \Psi(x,t)} \right|^2 = \sum_{i} \left| a_i \right|^4 + 2 \sum_{i}\sum_{j>i} \left| a_i \right|^2 \left| a_j \right|^2 \cos \frac{ \left( E_j - E_i \right) t}{\hbar }
        \end{equation}
        \item Tiempo de recurrencia
        \begin{columns}
        \begin{column}{0.5\textwidth}
        \begin{equation}
            t_r = \frac{h}{\Delta E} l \qquad l=1,2,3,\ldots
        \end{equation}
        \end{column}
        \begin{column}{0.5\textwidth}
        {
        % \extrarowheight = -0.5ex  %espacio en blanco
        % \renewcommand{\arraystretch}{2.00}
        \begin{table}[t!]
            \ra{1.2} % Spacing btween lines of table
            % \caption{Tiempo de recurrencia (primera recurrencia) para los estados no estacionarios límite dados por las \eqsref{ec:estado_no_estacionario_completo_limite_0} y \eqref{ec:estado_no_estacionario_completo_limite_90}, calculado con la \equatref{ec:tiempo_primera_recurrencia}.}
            \label{tab:tiempos_recurrencia}
            \centering
            \begin{tabular}{@{}c c@{}}
                \toprule
                $\alpha$ & $t_r\ (\mathrm{ps})$ \\
                \midrule

                $0$          & 25.05548 \\
                $90^{\circ}$ & 0.49251  \\

                \bottomrule
            \end{tabular}
        \end{table}
        }
        \end{column}
        \end{columns}
    \end{itemize}

\end{frame}

