% Metropolis theme
\usetheme[
    titleformat=regular,           % regular, smallcaps, allsmallcaps, allcaps
    sectionpage=progressbar,       % none, simple, progressbar
    subsectionpage=none,           % none, simple, progressbar
    numbering=fraction,            % none, counter, fraction
    progressbar=frametitle,        % none, head, frametitle, foot
    block=fill,                    % transparent, fill
    background=light,              % light, dark
    titleformat title=regular,     % regular, smallcaps, allsmallcaps, allcaps
    titleformat subtitle=regular,  % regular, smallcaps, allsmallcaps, allcaps
    titleformat section=regular,   % regular, smallcaps, allsmallcaps, allcaps
    titleformat frame=regular     % regular, smallcaps, allsmallcaps, allcaps
]{metropolis}
